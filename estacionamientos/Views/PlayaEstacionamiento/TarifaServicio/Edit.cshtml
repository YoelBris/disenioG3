@model estacionamientos.Models.TarifaServicio
@{
    ViewData["Title"] = "Editar tarifa";
}

<div class="container">
    <h2 class="mb-4">Editar tarifa</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="PlyID" />
        <input type="hidden" asp-for="SerID" />
        <input type="hidden" asp-for="ClasVehID" />
        <input type="hidden" asp-for="TasFecIni" />

        <div class="mb-3">
            <label asp-for="TasMonto" class="form-label">Monto</label>
            <input asp-for="TasMonto" class="form-control" />
            <span asp-validation-for="TasMonto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TasFecFin" class="form-label">Vigencia hasta</label>
            <input asp-for="TasFecFin" type="date" class="form-control" />
            <span class="form-text">Dejar vac√≠o si sigue vigente</span>
            <span asp-validation-for="TasFecFin" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Index"
               asp-route-plyID="@Model.PlyID"
               class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
