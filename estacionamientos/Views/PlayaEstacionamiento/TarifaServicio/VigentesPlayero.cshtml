@model IEnumerable<estacionamientos.Models.TarifaServicio>

@{
    ViewData["Title"] = "Tarifas vigentes";
    var playa = ViewBag.Playa as estacionamientos.Models.PlayaEstacionamiento;
}

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h5 class="card-title">
                    <i class="bi bi-geo-alt-fill text-primary"></i>
                    @playa?.PlyNom
                </h5>
            </div>
            <a asp-controller="PlayaEstacionamiento" asp-action="DetailsPlayero" asp-route-id="@playa?.PlyID"
               class="btn btn-outline-secondary">
               <i class="fa-solid fa-arrow-left"></i> Volver
            </a>
        </div>
        <p class="card-text text-muted mb-2">
            <strong>Dirección:</strong> @playa?.PlyDir (@playa?.PlyProv, @playa?.PlyCiu)
        </p>

        <h6 class="mt-3">Tarifas vigentes:</h6>
        @if (!Model.Any())
        {
            <div class="alert alert-warning mt-2">
                Esta playa aún no tiene tarifas vigentes cargadas.
            </div>
        }
        else
        {
            <table class="table table-hover mt-2">
                <thead>
                    <tr>
                        <th style="width: 30%">Servicio</th>
                        <th style="width: 20%">Clase vehículo</th>
                        <th style="width: 10%">Monto</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var grupo in Model.GroupBy(t => t.ServicioProveido.Servicio.SerNom))
                {
                    var rowCount = grupo.Count();
                    var first = true;

                    foreach (var item in grupo)
                    {
                        <tr>
                            @if (first)
                            {
                                <td rowspan="@rowCount" class="align-middle fw-bold bg-light border-end">
                                    @grupo.Key
                                </td>
                                first = false;
                            }

                            <td>@item.ClasificacionVehiculo.ClasVehTipo</td>
                            <td>$@item.TasMonto.ToString("N2")</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        }
        <a asp-controller="PlayaEstacionamiento" asp-action="DetailsPlayero" asp-route-id="@playa?.PlyID"
            class="btn btn-outline-secondary mt-3">
           <i class="bi bi-arrow-left"></i> Volver        </a>
    </div>
</div>
