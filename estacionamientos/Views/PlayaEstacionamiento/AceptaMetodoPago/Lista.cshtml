@model IEnumerable<estacionamientos.Models.AceptaMetodoPago>

@{
    ViewData["Title"] = "Métodos de pago";
    var playa = ViewBag.Playa as estacionamientos.Models.PlayaEstacionamiento;
}

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h5 class="card-title">
                    <i class="bi bi-geo-alt-fill text-primary"></i>
                    @playa?.PlyNom
                </h5>
            </div>
            <a asp-controller="PlayaEstacionamiento" asp-action="DetailsPlayero" asp-route-id="@playa?.PlyID"
               class="btn btn-outline-secondary">
               <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
        <p class="card-text text-muted mb-2">
            <strong>Dirección:</strong> @playa?.PlyDir (@playa?.PlyProv, @playa?.PlyCiu)
        </p>

        <h6 class="mt-3">Métodos de pago aceptados:</h6>
        @if (!Model.Any())
        {
            <div class="alert alert-warning mt-2">
                Esta playa aún no tiene métodos de pago cargados.
            </div>
        }
        else
        {
             <ul class="list-group mt-2">
                @foreach (var acepta in Model)
                {
                    var nombre = acepta.MetodoPago?.MepNom?.ToLower() ?? "";
                    string icon = "bi-wallet2";
                    if (nombre.Contains("efectivo")) icon = "bi-cash-stack";
                    else if (nombre.Contains("crédito")) icon = "bi-credit-card-2-front";
                    else if (nombre.Contains("débito")) icon = "bi-credit-card";
                    else if (nombre.Contains("transfer")) icon = "bi-bank";
                    else if (nombre.Contains("qr")) icon = "bi-qr-code-scan";

                    <li class="list-group-item d-flex align-items-center">
                        <i class="bi @icon text-primary me-2 fs-5"></i>
                        @acepta.MetodoPago?.MepNom
                    </li>
                }
            </ul>
        }
    </div>
</div>