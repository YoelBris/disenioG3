@model IEnumerable<estacionamientos.Models.PlazaEstacionamiento>
@{
    ViewData["Title"] = "Plazas de la playa";
    var playa = ViewBag.Playa as estacionamientos.Models.PlayaEstacionamiento;
}
<div class="card shadow-sm mt-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h5 class="card-title">
                    <i class="bi bi-geo-alt-fill text-primary"></i>
                    @playa?.PlyNom
                </h5>
            </div>
            <a asp-controller="PlayaEstacionamiento" 
                asp-action="DetailsPlayero" 
                asp-route-id="@ViewBag.PlyID"
                class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Volver
            </a>
        </div>
        <p class="card-text text-muted mb-2">
            <strong>Dirección:</strong> @playa?.PlyDir (@playa?.PlyProv, @playa?.PlyCiu)
        </p>

        <h6 class="mt-3">Plazas de la playa:</h6>

    @if (TempData["Mensaje"] != null)
    {
        var cssClass = TempData["MensajeCss"]?.ToString() ?? "success";

        <div id="alertMensaje" class="alert alert-@cssClass alert-dismissible fade show" role="alert">
            @TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No hay plazas registradas en esta playa.
        </div>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-light">
            <tr>
                <th>Número</th>
                <th>Nombre</th>
                <th>Clasificación</th>
                <th>Techo</th>
                <th>Altura</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Habilitada</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var plaza in Model)
        {
            <tr>
                <td>@plaza.PlzNum</td>
                <td>@(string.IsNullOrWhiteSpace(plaza.PlzNombre) ? "-" : plaza.PlzNombre)</td>
                <td>
                    @if (plaza.Clasificaciones != null && plaza.Clasificaciones.Any())
                    {
                        @string.Join(", ", plaza.Clasificaciones.Select(pc => pc.Clasificacion.ClasVehTipo))
                    }
                    else
                    {
                        <span class="text-muted">–</span>
                    }
                </td>

                <td>@(plaza.PlzTecho ? "Sí" : "No")</td>
                <td>@plaza.PlzAlt</td>
                <td class="text-center">
                    @if (plaza.PlzOcupada)
                    {
                        <span class="fw-bold text-danger">Ocupada</span>
                    }
                    else
                    {
                        <span class="fw-bold text-success">Libre</span>
                    }
                </td>
                <td class="text-center">
                    <form asp-action="ToggleHabilitada" asp-controller="Playero" method="post" class="d-inline">
                        <input type="hidden" name="PlyID" value="@plaza.PlyID" />
                        <input type="hidden" name="PlzNum" value="@plaza.PlzNum" />

                        <div class="form-check form-switch d-flex justify-content-center">
                            <input class="form-check-input" type="checkbox"
                                onchange="this.form.submit();"
                                @(plaza.PlzHab ? "checked" : "")
                                @(plaza.PlzOcupada ? "disabled" : "") />

                        </div>
                    </form>
                </td>
            </tr>
        }
        </tbody>

        </table>
    }

</div>

@section Scripts {
    <script>
        // desaparecer automáticamente el alert a los 3 segundos
        setTimeout(() => {
            const alert = document.getElementById('alertMensaje');
            if (alert) {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            }
        }, 3000);
    </script>
}
